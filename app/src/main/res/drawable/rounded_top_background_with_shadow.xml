<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/bg_gry"/>
            <corners android:radius="2dp" />
            <corners android:topLeftRadius="@dimen/medium_radius" android:topRightRadius="@dimen/medium_radius"/>
        </shape>
    </item>

    <item
        android:left="0dp"
        android:right="0dp"
        android:top="2dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:topLeftRadius="@dimen/medium_radius" android:topRightRadius="@dimen/medium_radius"/>
        </shape>
    </item>
</layer-list>
