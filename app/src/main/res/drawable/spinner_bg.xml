<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>

        <layer-list>

            <item>
                <shape>
                    <gradient android:angle="90" android:endColor="@color/backgroundColor" android:startColor="@color/backgroundColor" android:type="linear" />

                    <stroke android:width="2dp" android:color="@color/outline" />

                    <corners android:radius="5dp" />

                    <padding android:bottom="3dp" android:left="3dp" android:right="7dp" android:top="3dp" />
                </shape>
            </item>

            <item>

                <bitmap android:gravity="center|right" android:src="@drawable/vector_drop_down"
                    />

            </item>

        </layer-list>

    </item>

</selector>
